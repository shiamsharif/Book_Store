        <!-- Left side: Brand name and Toggler -->
        <a class="navbar-brand fs-4 fw-bold text-danger " href="{% url 'home' %}" style="margin-top: -4px;">Metu Auto</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerContent"
            aria-expanded="false" aria-controls="navbarTogglerContent">
            <span class="navbar-toggler-icon"></span>
        </button>


        <!-- Collapsible content -->
        <div class="navbar-collapse collapse" id="navbarTogglerContent">
